{
    "schemaVersion": 1,
    "id": "${modid}",
    "version": "${version}",
  
    "name": "Mob Capturing Tool",
    "description": "A Minecraft mod adding a mob capturing tool.",
    "authors": [
      "Matyrobbrt"
    ],
    "contact": {
      "homepage": "https://github.com/Matyrobbrt/MobCapturingTool",
      "sources": "https://github.com/Matyrobbrt/MobCapturingTool"
    },
  
    "license": "MIT",
    "icon": "mobcapturingtool.png",
  
    "environment": "*",
    "entrypoints": {
      "main": [
        "com.matyrobbrt.mobcapturingtool.MobCapturingTool"
      ],
      "client": [
        "com.matyrobbrt.mobcapturingtool.MCTClient"
      ]
    },
    "mixins": [
      "mobcapturingtool.mixins.json"
    ],
  
    "depends": {
      "fabricloader": ">=0.13",
      "fabric": "*",
      "minecraft": "1.18.x",
      "java": ">=17"
    },
    "suggests": {
      "another-mod": "*"
    }
  }
  